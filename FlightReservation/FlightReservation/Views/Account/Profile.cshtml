@model ProfileVM

@{
	ViewData["Title"] = "Profile";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container rounded bg-white mt-5 mb-5">
	<div class="row">
		
		<div class="col-md-5 border-right">
			<div class="d-flex justify-content-between align-items-center mb-3">
				<h4 class="text-right">@_languageService.Getkey("ps").Value</h4>
				<span><a key=11 asp-action="ProfileEdit" asp-route-id="@ViewBag.kullaniciId" class="btn btn-info btn-sm text-white"><i class="fa fa-edit me-2"></i>@_languageService.Getkey("edit").Value</a></span>

			</div>
			<form asp-action="Profile">
				<div class="form-outline col-6 mb-2">
					<span asp-validation-for="kullaniciAdi" class="text-warning small"></span>
					<input asp-for=" kullaniciAdi" type="text" class="form-control"
						   placeholder="" value="@Model.kullaniciAdi" disabled />
					<label key=12 class="form-label" asp-for=" kullaniciAdi">@_languageService.Getkey("name").Value</label>

				</div>
				<div class="form-outline col-6 mb-2">
					<span asp-validation-for="kullaniciSoyadi" class="text-warning small"></span>
					<input asp-for=" kullaniciSoyadi" type="text" class="form-control"
						   placeholder="" value="@Model.kullaniciSoyadi" disabled />
					<label key=13 class="form-label" asp-for=" kullaniciSoyadi">@_languageService.Getkey("surname").Value</label>

				</div>


				<div class="form-outline mb-2">
					<span asp-validation-for=" Phone" class="text-warning small"></span>
					<input asp-for="Phone" type="text" class="form-control"
						   placeholder="000 000 0000" pattern="[0-9]{3} [0-9]{3} [0-9]{4}" value="@Model.Phone" disabled />
					<label key=14 class="form-label" asp-for="Phone">@_languageService.Getkey("phone").Value</label>

				</div>

				<div class="form-outline mb-2">
					<span asp-validation-for="kullaniciDogum" class="text-warning small"></span>
					<input asp-for="kullaniciDogum" type="text" class="form-control" value="@Model.kullaniciDogum.ToShortDateString()" disabled />
					<label key=15 class="form-label" asp-for="kullaniciDogum">@_languageService.Getkey("bd").Value</label>

				</div>

				<div class="form-outline mb-2">
					<span asp-validation-for=" kullaniciEmail" class="text-warning small"></span>
					<input asp-for=" kullaniciEmail" type="email" class="form-control"
						   placeholder="Email Adress" value="@Model.kullaniciEmail" disabled />
					<label  class="form-label" asp-for=" kullaniciEmail">Email</label>

				</div>


			</form>
