@model List<KullaniciVM>

@{

	ViewData["Title"] = "Kullanıcılar";
}

<div class="row">
	<div class="col">
		<h1 key=22 class="display-4">Kullanıcılar</h1>
		<hr />
	</div>
</div>

<div class="row mb-3">
	<div class="col">
		<a key=23 asp-action="KullaniciCreate" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2"></i>Yeni Kullanıcı</a>
	</div>
</div>

<div class="row mb-3">
	<div class="col">
		<table class="table table-hover table-sn">
			<thead>
				<tr>
					<th>Id</th>
					<th key=24>Adı</th>
					<th key =25>Soyadı</th>
					<th >Locked</th>
					<th>Role</th>
					<th key=26>Telefon</th>
					<th key=27>Kayıt Tarihi</th>
				</tr>
			</thead>
			<tbody>
				@foreach (KullaniciVM kullanici in Model)
				{
					<tr>
						<td>@kullanici.Id</td>
						<td>@kullanici.kullaniciAdi</td>
						<td>@kullanici.KullaniciSoyadi</td>
						<td>
							@if (kullanici.Locked)
							{
								<i class="fa fa-check text-success"></i>
							}
							else
							{
								<i class="fa fa-times text-danger"></i>
							}
						</td>
						<td>@kullanici.Role</td>
						<td>@kullanici.Phone</td>
						<td>@kullanici.KayitTarih</td>
						<td class="text-end">
							<a key=28 asp-action="KullaniciEdit" asp-controller="Admin" asp-route-id="@kullanici.Id" class="btn btn-info btn-sm text-white"><i class="fa fa-edit me-2"></i>Düzenle</a>
							<a key=29 asp-action="KullaniciDelete" asp-route-id="@kullanici.Id"
							   onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz @kullanici.kullaniciAdi+@kullanici.KullaniciSoyadi? ')"
							   class="btn btn-danger btn-sm text-white"><i class="fa fa-trash me-2"></i>Sil</a>

						</td>


					</tr>
				}
			</tbody>
		</table>
	</div>
</div>